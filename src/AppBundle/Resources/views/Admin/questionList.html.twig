<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Question</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {% for question in questions %}
        <tr>
            <td>
                {{ question.id }}
            </td>
            <td>
                {{ question.question }}
            </td>
            <td>
                <a href="{{ path('admin_delete_question', { 'id': question.id }) }}">Skasuj pytanie</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
